{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "effector/babel-plugin",
      {
        "reactSsr": true
      }
    ],
    [
      "module-resolver",
      {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "alias": {
          "@": "./src",
          "public": "./src/public",
          "app": "./src/app",
          "processes": "./src/processes",
          "pages": "./src/pages",
          "widgets": "./src/widgets",
          "features": "./src/features",
          "entities": "./src/entities",
          "shared": "./src/shared",
          "tests": "./tests"
        }
      }
    ]
  ]
}
