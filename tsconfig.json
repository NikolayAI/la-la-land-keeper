{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
