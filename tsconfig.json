{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "processes/*": ["src/processes/*"],
      "pages/*": ["src/pages/*"],
      "widgets/*": ["src/widgets/*"],
      "features/*": ["src/features/*"],
      "entities/*": ["src/entities/*"],
      "shared/*": ["src/shared/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
