{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
